@model WebQuanLyAppOnTap.Models.Question

@{
    ViewBag.Title = "Xóa câu hỏi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<section class="banner_main" style="margin-top: -50px;">
    <h2 style="padding-top:50px;">Bạn có chắc muốn xóa câu hỏi sau?</h2>

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <strong>Nội dung câu hỏi: </strong>
            <span>@Model.QuestionContent</span>
        </div>

        <div class="form-group">
            <strong>Đáp án 1: </strong>
            <span>@Model.Answer1</span>
        </div>

        <div class="form-group">
            <strong>Đáp án 2: </strong>
            <span>@Model.Answer2</span>
        </div>

        <div class="form-group">
            <strong>Đáp án 3: </strong>
            <span>@Model.Answer3</span>
        </div>

        <div class="form-group">
            <strong>Đáp án 4: </strong>
            <span>@Model.Answer4</span>
        </div>

        <div class="form-group">
            <strong>Đáp án đúng: </strong>
            <span>@Model.CorrectAnswer</span>
        </div>

        <div class="form-group">
            <strong>Hot Question: </strong>
            <span>@Model.HotQuestion</span>
        </div>

        <div class="form-group">
            <strong>Bài kiểm tra: </strong>
            <span>@Model.NameQuiz</span>
        </div>
    </div>

    @using (Html.BeginForm("DeleteConfirmed", "Questions", new { questionId = Model.Id }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận Xóa" class="btn" style="background-color: red; color: white;" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Danh sách câu hỏi", "Index")
    </div>

</section>


