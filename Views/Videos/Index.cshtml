@model List<WebQuanLyAppOnTap.Models.Video>

@{
    ViewBag.Title = "Danh sách video";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .table th, .table td {
        text-align: center; /* Canh giữa nội dung */
        vertical-align: middle; /* Canh giữa theo chiều dọc */
        padding: 8px; /* Khoảng cách giữa nội dung và viền của cột */
    }
</style>

<section class="banner_main" style="margin-top: -50px;">
    <h2 style="padding-top: 50px;">Danh Sách Video Bài Giảng</h2>

    <br />

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>

    <table class="table">
        <tr style="background-color: aqua; text-align: center">
            <th>
                Tên bài giảng
            </th>
            <th>
                Link video
            </th>
            <th>
                Ngày đăng
            </th>
            <th>
                Tên môn học
            </th>
            <th></th>
        </tr>

        @foreach (var video in Model)
        {
            <tr>
                <td>
                    @video.NameVideo
                </td>
                <td>
                    @video.LinkVideo
                </td>
                <td>
                    @video.DateUpload.ToString("dd/MM/yyyy HH:mm:ss")
                </td>
                <td>
                    @(video.NameSubject ?? "N/A")
                </td>
                <td>
                    <a class="edit-link" href="@Url.Action("EditVideo", "Videos", new { videoId = video.Id })">Sửa |</a>
                    <a class="edit-link" href="@Url.Action("DeleteVideo", "Videos", new { videoId = video.Id })"> Xóa</a>
                </td>
            </tr>
        }
    </table>

</section>

