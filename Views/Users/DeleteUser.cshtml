@model WebQuanLyAppOnTap.Models.UserData

@{
    ViewBag.Title = "Xóa User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<h2>Bạn có chắc chắn muốn xóa User sau đây không?</h2>

<div class="form-horizontal">
    <hr />

    <div class="form-group">
        <label for="Username">Tên đăng nhập: </label>
        <span>@Model.Username</span>
    </div>

    <div class="form-group">
        <strong>Họ tên: </strong>
        <span>@Model.FullName</span>
    </div>

    <div class="form-group">
        <label for="Email">Email: </label>
        <span>@Model.Email</span>
    </div>

    <div class="form-group">
        <strong>Loại tài khoản: </strong>
        <span>@Model.NameType</span>
    </div>
</div>

@if (!ViewBag.HasScore)
{
    using (Html.BeginForm("DeleteConfirmed", "Users", new { userId = Model.Id }))
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận Xóa" class="btn" style="background-color: red; color: white;" />
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning" role="alert">
        Người dùng còn điểm số trong cơ sở dữ liệu không được phép xóa.
    </div>
}

<div>
    @Html.ActionLink("Danh sách tài khoản", "Index")
</div>

<div style="color: red">
    @ViewData["Error"]
</div>
