@model WebQuanLyAppOnTap.Models.UserData

@{
    ViewBag.Title = "Sửa thông tin User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<section class="banner_main" style="margin-top: -50px;">
    <h2 style="padding-top: 50px;">Sửa thông tin User</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Username)
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong>Họ tên</strong>
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <strong>Loại tài khoản</strong>
                @Html.DropDownListFor(model => model.UserType_ID, new SelectList(
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Boss", Value = "1" },
                        new SelectListItem { Text = "Quản trị viên", Value = "2" },
                        new SelectListItem { Text = "Người dùng", Value = "3" }
                    }, "Value", "Text"), "-- Lựa chọn loại tài khoản --", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Danh sách tài khoản", "Index")
    </div>
</section>
