@model List<WebQuanLyAppOnTap.Models.Subject>

@{
    ViewBag.Title = "Danh sách môn học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .table th, .table td {
        text-align: center; /* Canh giữa nội dung */
        vertical-align: middle; /* Canh giữa theo chiều dọc */
        padding: 8px; /* Khoảng cách giữa nội dung và viền của cột */
    }

    .edit-link {
        text-decoration: none;
        color: blue;
    }
</style>

<section class="banner_main" style="margin-top: -50px;">

    <h2 style="padding-top: 50px">Danh Sách Môn Học</h2>

    <br />

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>

    <table class="table">
        <tr style="background-color: aqua; text-align: center">
            <th>
                Tên môn học
            </th>
            <th></th>
        </tr>

        @foreach (var subject in Model)
        {
            <tr>
                <td>
                    @subject.NameSubject
                </td>
                <td>
                    <a class="edit-link" href="@Url.Action("EditSubject", "Subjects", new { subjectId = subject.Id })">Sửa Môn học |</a>
                    <a class="edit-link" href="@Url.Action("DeleteSubject", "Subjects", new { subjectId = subject.Id })"> Xóa Môn học</a>
                </td>
            </tr>
        }
    </table>
</section>

