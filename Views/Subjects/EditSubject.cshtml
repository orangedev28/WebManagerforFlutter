@model WebQuanLyAppOnTap.Models.Subject

@{
    ViewBag.Title = "Sửa Môn học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<section class="banner_main" style="margin-top: -50px;">
    <h2 style="padding-top: 50px;">Sửa Môn học</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <strong>Tên môn học</strong>
                @Html.TextBoxFor(model => model.NameSubject, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Danh sách môn học", "Index")
    </div>

</section>

