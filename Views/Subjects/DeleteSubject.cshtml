@model WebQuanLyAppOnTap.Models.Subject

@{
    ViewBag.Title = "Xóa Môn Học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<section class="banner_main" style="margin-top: -50px;">
    <h2 style="padding-top: 50px;">Bạn có chắc chắn muốn xóa Môn học sau đây không?</h2>

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label for="Username">Tên môn học: </label>
            <span>@Model.NameSubject</span>
        </div>
    </div>

    @if (!ViewBag.HasQuizzes)
    {
        using (Html.BeginForm("DeleteConfirmed", "Subjects", new { subjectId = Model.Id }))
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xác nhận Xóa" class="btn" style="background-color: red; color: white;" />
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Môn học có chứa các bài kiểm tra không được phép xóa.
        </div>
    }

    <div>
        @Html.ActionLink("Danh sách môn học", "Index")
    </div>


</section>

